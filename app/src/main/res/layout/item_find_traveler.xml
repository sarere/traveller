<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:background="@drawable/stroke_find_traveler"
    android:paddingTop="@dimen/normal_pad_margin"
    android:paddingBottom="@dimen/normal_pad_margin"
    android:layout_marginEnd="@dimen/normal_pad_margin"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUserFindTraveler"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher"
        tools:src="@color/colorPrimary"
        tools:ignore="ContentDescription"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimary" />

    <TextView
        android:layout_marginTop="@dimen/small_pad_margin"
        android:id="@+id/userNameFindTraveler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:text=""
        tools:text="Rere"/>

    <Button
        android:id="@+id/btnSendMessage"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/small_pad_margin"
        android:background="@drawable/button_message_style"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:padding="@dimen/small_pad_margin"
        android:text="@string/message_person" />

</LinearLayout>