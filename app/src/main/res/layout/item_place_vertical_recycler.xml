<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recommendPlaceItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ripple_with_white_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginStart="@dimen/small_pad_margin"
        android:layout_marginEnd="@dimen/small_pad_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/normal_pad_margin"
        android:paddingBottom="@dimen/normal_pad_margin"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgPlace"
            tools:ignore="ContentDescription"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/no_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_pad_margin">

            <TextView
                android:layout_marginBottom="@dimen/tiny_pad_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/namePlace"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/itemTitle"
                tools:text="Borobudur Temple" />

            <RatingBar
                android:layout_marginBottom="@dimen/tiny_pad_margin"
                android:layout_below="@id/namePlace"
                android:id="@+id/ratingBarItem"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:progressTint="@color/gold"
                android:numStars="5"
                android:stepSize="0.1" />

            <TableRow
                android:layout_marginBottom="@dimen/tiny_pad_margin"
                android:id="@+id/categoryGroup"
                android:layout_below="@id/ratingBarItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/imageView2"
                    tools:ignore="ContentDescription"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@mipmap/ic_launcher_culture" />

                <ImageView
                    android:id="@+id/imageView3"
                    tools:ignore="ContentDescription"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@mipmap/ic_launcher_culture" />

                <ImageView
                    android:id="@+id/imageView4"
                    tools:ignore="ContentDescription"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@mipmap/ic_launcher_culture" />

                <ImageView
                    android:id="@+id/imageView5"
                    tools:ignore="ContentDescription"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@mipmap/ic_launcher_culture" />

                <ImageView
                    android:id="@+id/imageView6"
                    tools:ignore="ContentDescription"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@mipmap/ic_launcher_culture" />

                <ImageView
                    android:id="@+id/imageView7"
                    tools:ignore="ContentDescription"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@mipmap/ic_launcher_culture" />
            </TableRow>

            <TextView
                android:id="@+id/placeDesc"
                android:layout_below="@id/categoryGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_desc"
                android:lines="2"
                tools:text="Borobudur merupakan tempat merupakan tempatmerupakan tempatmerupakan tempatmerupakan tempatmerupakan tempat"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_marginStart="@dimen/small_pad_margin"
        android:layout_marginEnd="@dimen/small_pad_margin"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_gap" />

</LinearLayout>
