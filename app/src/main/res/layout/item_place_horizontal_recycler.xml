<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recommendPlaceItem"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/small_pad_margin"
    android:background="@drawable/ripple_with_white_bg_color"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgPlace"
        tools:ignore="ContentDescription"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/yoja_min" />

    <Space
        android:id="@+id/spacer_item_recommend"
        android:layout_below="@id/imgPlace"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/small_space" />

    <TextView
        android:layout_below="@id/spacer_item_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/namePlace"
        android:textColor="@color/black"
        android:textSize="@dimen/itemTitle"
        tools:text="Borobudur Temple" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_below="@id/namePlace"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:progressTint="@color/gold"
        android:numStars="5"
        android:stepSize="0.1"
        android:layout_marginBottom="@dimen/small_pad_margin"/>

    <TableRow
        android:layout_marginBottom="@dimen/small_pad_margin"
        android:id="@+id/categoryGroup"
        android:layout_below="@id/ratingBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView2"
            tools:ignore="ContentDescription"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@mipmap/ic_launcher_culture" />

        <ImageView
            android:id="@+id/imageView3"
            tools:ignore="ContentDescription"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@mipmap/ic_launcher_culture" />

        <ImageView
            android:id="@+id/imageView4"
            tools:ignore="ContentDescription"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@mipmap/ic_launcher_culture" />

        <ImageView
            android:id="@+id/imageView5"
            tools:ignore="ContentDescription"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@mipmap/ic_launcher_culture" />

        <ImageView
            android:id="@+id/imageView6"
            tools:ignore="ContentDescription"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@mipmap/ic_launcher_culture" />

        <ImageView
            android:id="@+id/imageView7"
            tools:ignore="ContentDescription"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@mipmap/ic_launcher_culture" />
    </TableRow>

</RelativeLayout>
